<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/Gray_Cloud"
        android:gravity="center">

        <TextView
            android:id="@+id/Start_fatigue_scr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="Start Fatigue Predictor"
            android:textColor="@color/Dodger_Blue"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textSize="15dp"
            android:text="Log in to update subscrption"
            android:textColor="@color/Dodger_Blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buy_subs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:text="Buy Subscription"
            android:textColor="@color/Dodger_Blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admin_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:text="Admin Menu"
            android:textColor="@color/Dodger_Blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:text="Info"
            android:textColor="@color/Dodger_Blue"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fp_logo"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</LinearLayout>